{
  "name": "pydantic",
  "language": "python",
  "patterns": [
    {
      "name": "typed_field",
      "query": "(assignment left: (identifier) @field_name type: (_) @field_type)",
      "field_name": {
        "node_type": "identifier",
        "field_name": "left"
      },
      "field_type": {
        "node_type": "type",
        "field_name": "type"
      },
      "conditions": ["inside_class_body"]
    },
    {
      "name": "field_with_default",
      "query": "(assignment left: (identifier) @field_name type: (_) @field_type right: (_) @default_value)",
      "field_name": {
        "node_type": "identifier",
        "field_name": "left"
      },
      "field_type": {
        "node_type": "type",
        "field_name": "type"
      },
      "conditions": []
    }
  ],
  "type_mapping": {
    "str": "string",
    "int": "integer",
    "float": "number",
    "bool": "boolean",
    "EmailStr": "email",
    "Optional[str]": "string?",
    "str | None": "string?",
    "int | None": "integer?",
    "float | None": "number?",
    "bool | None": "boolean?"
  }
}